FROM node:18-alpine

# Install basic dependencies
RUN apk add --no-cache python3 py3-pip make g++

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies and build mediasoup worker
RUN npm install --omit=dev

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start the application
CMD ["node", "-e", "console.log('âœ… Backend container starting...'); require('./dist/server.js')"]
